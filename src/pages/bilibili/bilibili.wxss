.header{width: 100%;height: 90rpx;border: 1px solid blue;}
.hdCon{display: flex; justify-content: space-between; align-items: center;height: 100%;}
.hdCon navigator, haCon kefu{ height: 50rpx;}
.hdCon image{ height: 100%;}
.kefu{ position: relative; animation: dh 1s linear infinite;}
.kefu .btn{position: absolute; width: 100%; height: 100%; top: 0;left: 0; opacity: 0;}

.banner{ width: 100%; }
.banner image{ width: 750rpx; display: block;}
.biliBox:nth-child(2n){ background: #fff;}

.biliBox{ padding: 80rpx 0; background: #1c356E;}
.biliBoxTit{ width: 490rpx; height: 70rpx; background: #DE2E05; 
 border-radius: 70rpx; color: #fff; text-align: center; line-height: 70rpx;
 font-size: 40rpx; margin: 0 auto; position: relative;margin-bottom: 40rpx;
 } 
 .biliBoxTit::before{ display: block; content: ""; width: 100%; height: 100%;
 border:2px dotted #DE2E05; position: absolute; top: 0; left: 0; box-sizing: border-box;
 border-radius: 70rpx; transform: scale(1.03,1.2);}

.bilipsBoxCon .pic{ width: 100%; }
.bilipsBoxCon .text{  padding: 40rpx 26rpx 0; box-sizing: border-box; display: flex;
 flex-wrap: wrap;}
.bilipsBoxCon .text view{ width:  50%;font-size: 30rpx;line-height: 1.8em;
position: relative; padding-left: 15rpx;box-sizing: border-box;}
.bilipsBoxCon .text view::before{ content: ""; display: block; width: 10rpx;
height: 10rpx; border-radius: 50%; background: #000;position: absolute;
left: 0; top: 50%; margin-top: -5rpx;}

.biliBox:nth-child(2n-1) .bilipsBoxCon .text{ color: #fff;}
.biliBox:nth-child(2n-1) .text view::before{ background: #fff;}

.biliBoxConOne{ color: #fff; display: flex; flex-wrap: wrap; justify-content: center;}
.biliBoxConOne .item{ text-align: center;padding: 20rpx;}
.biliBoxConOne image{width: 180rpx; height: 180rpx;}
.biliBoxConOne .item view{ text-transform: uppercase;font-size: 28rpx;
padding-top:5rpx ;}

.footer{ padding: 30rpx 0;background: #f2f2f2; text-align: center;}
.footer .pic{ width: 300rpx; }
.footer .text{ font-size: 25rpx; color: #999;}

