.user_info_wrap{
  height: 45vh;
  overflow: hidden;

}

.user_img_wrap{
  position: relative;
}

.user_bg{
  height: 50vh;
  filter: blur(10rpx);
}
.user_info{
position: absolute;
left: 50%;
transform: translateX(-50%);
top: 20%;
text-align: center;
}
 .user_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: relative;
}

 .user_name{
  color: #fff;
  margin-top: 40rpx;
}

 .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid greenyellow;
  color: greenyellow;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}




.user_content{
  position: relative;
}

.user_main{
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  padding-bottom: 100rpx;
}
