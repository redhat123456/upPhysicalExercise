<view class="page__hd">
  <image class="weui-media-box__thumb" src="/images/core/set.png" />
  <view class="page__title">今日训练设置</view>
  <view class="page__desc">设置后会显示当天要做的训练</view>
</view>
<view class="page__bd">
  <view class="weui-cells">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">班级</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="例如：建1604-1" value="{{todayClassName}}" bindinput="todayClassNameInput" />
      </view>
    </view>
  </view>
  <view class="weui-cells__tips">* 不知道所在班级？
    
  </view>
  <view class="button-sp-area">
    <button bindtap="setTodayClassName" class="weui-btn" type="primary" plain="true">点击设置</button>
  </view>
</view>